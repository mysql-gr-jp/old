exit;

sub Error {
 print &quot;Content-type: text/html\; charset=shift_jis\n\n&quot;;
 print&lt;&lt;__ERROR__;
 &lt;HTML&gt;&lt;HEAD&gt;&lt;TITLE&gt;ERROR!!&lt;/TITLE&gt;&lt;/HEAD&gt;
